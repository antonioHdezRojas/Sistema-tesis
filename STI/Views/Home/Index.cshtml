@{
    ViewBag.Title = "Home Page";
}
<div class="form">
    <div class="header"><h2>Sign In</h2></div>
    <div class="login">
        <form method="post" onsubmit="login()">

            <ul id="formLogin">
                <li>
                    <span class="un"><i class="glyphicon glyphicon-user"></i></span><input type="text" required class="text" placeholder="Numero de cuenta" id="txtNoCuenta" name="txtNoCuenta" />
                </li>
                <li>
                    <span class="un"><i class="glyphicon glyphicon-lock"></i></span><input type="password" required class="text" placeholder="Password" id="txtPass" name="txtPass" />
                </li>
                <li>
                    <input type="button" value="LOGIN" class="btn" onclick="login()">
                </li>
                <li>
                    <a href="#">Forgot Password?</a>
                </li>
            </ul>
        </form>
    </div>
</div><br />
