
@{
    ViewBag.Title = "habEstudio";
}
<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript">
    google.load("visualization", "1.1", { packages: ["bar"] });
    $(document).ready(function () {
        drawChartHabitosEstudio();
    })
</script>
<h2>Habitos de estudio</h2>
@Html.Partial("navBar")
<div class="row">
    <div class="col-md-12">
        <div id="chartHabitos" style="width: 100%; height: 40%;"></div>
    </div>
</div>
<form>
    <div class="row">                    
            <div class="form-group col-md-4">
                <h5 data-cal="@ViewBag.CatCon" id="catConcentracion">Concentracion</h5>
                @if ((int?)ViewBag.CatCon > 12)
            {
                    <p>@ViewBag.mensajeCatCon</p>
                }
                else
                {
                    <a href="@Url.Action("concentracion","Materiales")">material</a>
                }
                <br />
            </div>
            <div class="form-group col-md-4">
                <h5 data-cal="@ViewBag.catRel" id="catRelInter">Relaciones Interpersonales</h5>
