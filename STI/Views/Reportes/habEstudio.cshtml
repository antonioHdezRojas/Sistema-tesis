                {
                    <a href="@Url.Action("relacionesInter", "Materiales")">material</a>
                }
                <br />
            </div>
            <div class="form-group col-md-4">
                <h5 data-cal="@ViewBag.catMemoria" id="catMemoria">Memoria</h5>
                @if ((int?)ViewBag.catMemoria > 12)
            {
                    <p>@ViewBag.mensajeMem</p>
                }
                else
                {
                    <a href="../Materiales/Memoria/Ahorcado/index.html">material</a>
                }
                <br />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <h5 data-cal="@ViewBag.catMotEst" id="motEstudio">Motivacion para estudiar</h5>
